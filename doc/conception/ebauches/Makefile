# Path vers les modèles
MODELS_PATH = $(realpath ../animUML/)
# Liste des modèles à générer (un par répertoire sous MODELS_PATH)
MODELS := conceptionGenerale

SRC_PLANTUML = $(realpath ../schemas/)
PLANTUML = java -jar /opt/plantuml/plantuml.jar
DEPEND_PLANTUML = ./build/.dependPlantUML
OUTPUT_PLANTUML = $(realpath ./build/eps/)
SRC_FILES := $(wildcard $(SRC_PLANTUML)/*.plantuml) $(wildcard $(SRC_PLANTUML)/**/*.plantuml)

all: latex

eps : $(DEPEND_PLANTUML)
	@echo -e "\n================================================================================\n"
	@echo "                               Start to generate EPS file"
	@echo -e "\n================================================================================\n"
	@$(MAKE) $(patsubst $(SRC)/%.plantuml,$(OUTPUT_PLANTUML)/%.$@,$(shell ls -1t $(SRC_FILES)))

$(OUTPUT_PLANTUML)/%.eps: $(SRC)/%.plantuml
	${PLANTUML} -teps -stdrpt:1 -recursive $< -o $(OUTPUT_PLANTUML)

$(DEPEND_PLANTUML): $(SRC_FILES)
	@find_includes() { \
		sed \
			-e "s,^[[:space:]]*!include \([^<].*[^>]\)$$,$${1}/\1," \
			-e t -e d "$$2" \
			| paste -sd " " -; \
	}; \
	echo "# GENERATED BY make depend" > $@; \
	echo "# DO NOT EDIT" >> $@; \
	echo >> $@; \
	for file in $^; do \
		name="$$(basename -s .plantuml "$$file")"; \
		includes="$$(find_includes "$(SRC_PLANTUML)" "$$file")"; \
		printf "$(OUTPUT_PLANTUML)/%s.eps: %s\n" "$$name" "$$includes"; \
	done >> $@

latex: animuml
	@echo -e "\n================================================================================\n"
	@echo "                               Start to generate PDF file"
	@echo -e "\n================================================================================\n"
	@latexmk

# Règle pour exécuter animuml pour chaque modèle
animuml: $(addprefix animuml_,$(MODELS))

animuml_%:
	$(MAKE) -C $(MODELS_PATH)/$*

# Règle pour nettoyer animuml pour chaque modèle
clean_animuml: $(addprefix clean_animuml_,$(MODELS))

clean_animuml_%:
	$(MAKE) clean -C $(MODELS_PATH)/$*

clean_eps:
	@rm -rf $(OUTPUT_PLANTUML)/**/*.eps $(OUTPUT_PLANTUML)/*.eps
	@rm -f $(DEPEND_PLANTUML)

clean_latex:
	@latexmk -c

clean_vscode:
	@rm -f *.toc *.out *.log *.lof *.ist *.glo *.fls *.fdb_latexmk *.aux *.acn *.synctex.gz *.pyg *.lol *.bcf *.xml *.acr *.alg *.bbl *.glg *.blg *.gls .dependPlantUML

clean: clean_eps clean_latex clean_vscode clean_animuml

.PHONY: all clean eps clean_eps latex clean_latex

-include $(DEPEND_PLANTUML)
